/* pages/order/index.wxss */
.scroll-list {
    overflow: hidden;
    /* height: 82%; */
    /* height: 92%; */
}


.topbar {
    margin-top: 0;
    background: #fff;
}

.topbar-item {
    color: #333;
    text-align: center;
    padding: 10px 0;
}

.topbar-item.active {
    color: #479de6;
}

.swiper_box {
    width: 100%;
}

swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
}

.order-list{
  margin: 20rpx 20rpx;
  -moz-box-shadow:2px 2px 5px #D9D9D9; 
  -webkit-box-shadow:2px 2px 5px #D9D9D9;
   box-shadow:2px 2px 5px #D9D9D9;
   background: #fff;
}

.orderListTitle{
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1rpx solid #f3f3f3;
}
.orderListTitle .userImg{
    float: left;
    width: 50rpx;
    height: 50rpx;
    border-radius: 35rpx;
    margin:15rpx;
}
.orderListTitle .userImg image{
    border-radius: 35rpx;
    width: 100%;
    height: 100%;
}
.orderListTitle .userName{
    padding-right: 50rpx;
    color: #999999;
    background-size: 35rpx 35rpx;
}
.orderListTitle .orderStatus{
    float: right;
    margin-right: 20rpx;
    color: #479de6;
    font-size: 34rpx;
}

.orderListDetails{
  width: 100%;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f3f3f3;
}

.details-list{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}

.list-left{
  float: left;
  color: #999999;
  font-size: 28rpx;
  padding-left: 40rpx;
}

.list-right{
  float: left;
  font-size: 28rpx;
}

.productCount{
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #f3f3f3;
}

.product-left{
  float: left;
  color: #999999;
  font-size: 28rpx;
  padding-left: 3%;
  width: 57%;
}

.product-right{
  width: 37%;
  padding-right: 3%;
  float: left;
  font-size: 28rpx;
  text-align: right;
  padding-top: 10rpx;
}

.btn{
  margin-right: 0px;
  width: 220rpx;
  height: 70rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 70rpx;
  border-radius: 6rpx;
  font-size: 28rpx;
  background: #fff;
  border: 1px solid #D9D9D9;
}
button::after{
  border: none;
}
.cancel-btn{
    border: 1rpx solid #ccc;
}
.topay-btn{
    border:1px solid #e64340;
    color: #e64340;
}


