<!--pages/map/index.wxml-->
<view class="container">
<view class="weui-search-bar">
    <view class="weui-search-bar__form">
        <view class="weui-search-bar__box">
            <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
            <input type="text" class="weui-search-bar__input" placeholder-class="phcolor" placeholder="请输入地址" value="{{ inputVal }}" bindinput="bindInput" />
            <view class="weui-icon-clear" bindtap="clearInput">
                <icon type="clear" size="14"></icon>
            </view>
        </view>
    </view>
</view>
<view class="container1" wx:if="{{tips.length>0}}">
<view bindtouchstart="bindSearch" data-keywords="{{i.name}}" class="text_box" wx:for="{{tips}}" wx:for-item="i" wx:key="">
    {{i.name}}
  </view>
</view>
<view class="container1" wx:else>
  <view class="indexs">
      <view class="weui-cells border-top" wx:for="{{ addresslist }}" wx:key="">
         <view class="weui-cell" data-address="{{item.get_address}}" bindtap="selectAddress">
            <view class="weui-cell__bd">
               <view class="weui-title">{{item.get_address}}</view>
               <view class="weui-title1">{{item.get_username}} {{item.get_phone}}</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access">
              
            </view>
         </view>
      </view>
   </view>
</view>
</view>
<import src="../../model/model.wxml"/>
<template is="areaData" data="{{...item}}"/>

