/* pages/map/index.wxss */
.container{
  overflow: hidden;
}
.weui-search-bar {
  position: relative;
  padding: 5px 5px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #EFEFF4;
  border-bottom: 1rpx solid #D7D6DC;
  background: #fff;
}


button::after{
border:none;
}

.container1{
  padding-top: 10rpx;
  background: #fff;
  height: 91%;
}

.indexs{
  margin: 20rpx 20rpx;
  -moz-box-shadow:2px 2px 5px #D9D9D9; 
  -webkit-box-shadow:2px 2px 5px #D9D9D9;
   box-shadow:2px 2px 5px #D9D9D9;
}

.imgs{
  margin-bottom: 2px;
  margin-right: 15rpx;
  vertical-align: middle;
  width:30rpx; 
  height: 30rpx;
}

.weui-title{
  font-size: 28rpx;
}

.weui-title1{
  font-size: 26rpx;
  color: #C8C8CD;
}

.text-aligns{
  text-align: center;
  padding-top: 10rpx;
}

.other-button{
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 28rpx;
  border-radius: 0rpx;
  width: 98%;
  height: 100%;
  background-color: #479de6;
}


.section_text{
  position: absolute;
  width: 100%;
  z-index: 1000;
  background-color: white;
  overflow: auto;
}
.text_box{
  padding-left: 25rpx;
  border-bottom:1px solid #ECECEC;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

::-webkit-scrollbar{
width: 6rpx;
height: 6rpx;
background-color: #ECECEC;
}