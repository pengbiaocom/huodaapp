/**index.wxss**/
page{
  width: 100vw;
  height: 98%;
}
.indexs{
  margin: 20rpx 20rpx;
  -moz-box-shadow:2px 2px 5px #D9D9D9; 
  -webkit-box-shadow:2px 2px 5px #D9D9D9;
   box-shadow:2px 2px 5px #D9D9D9;
}


.imgs{
  margin-bottom: 2px;
  margin-right: 15rpx;
  vertical-align: middle;
  width:30rpx; 
  height: 30rpx;
}



.weui-title{
  font-size: 28rpx;
}

.weui-title1{
  font-size: 24rpx;
  color: #C8C8CD;
}

.wu-text-red{
  font-size: 28rpx;
  color: red;
}

.wu-text-hei{
  font-size: 28rpx;
  color:#000;
}

.wu-text-hui{
  font-size: 28rpx;
  color: #C8C8CD;
}

.detail-nav {
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  position: fixed; 
  bottom: 0;
  right: 0;
  z-index: 1; 
  width: 100%;
  height: 100rpx;
}

.nav-left{
  width:65%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 5%;
  
  font-size: 28rpx;
  float: left;
}

.nav-price{
  float: left;
  color: #FF8C00;
}

.nav-center{
  float: left;
  text-align: left;
  color: #C8C8CD;
  padding-left: 20rpx;
}

button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 28rpx;
  border-radius: 0rpx;
  width: 30%;
  height: 100%;
}

.btn-hover{
  background-color: white;
}


button::after{
  border: none;
}

.button-red {
  background-color: #ff4544; /* 红色 */
  line-height: 100rpx;
}

.text-area{
  padding-bottom: 20rpx;
  padding: 0rpx 30rpx;
}
.weui-textarea{
  width: 94%;
  height: 200rpx;
  font-size: 26rpx;
  padding: 20rpx 20rpx;
  border:1px solid #DCDCDC;
  border-radius: 8rpx;
}
.zhishu{
  font-size: 28rpx;
  text-align: right;
  height: 60rpx;
  line-height: 60rpx;
  color: #666;
}

.tui-picker-content{
  padding: 30rpx;
  text-align: center;
}
.tui-picker-name{
  height: 70rpx;
  line-height: 70rpx;
}
.tui-picker-detail{
  height: 70rpx;
  line-height: 70rpx;
  background-color: #fff;
  font-size: 28rpx;
  padding: 0 10px;
  overflow: hidden;
}

.price-list{
  background-color: white;
  padding: 0x;
  width: 100%; 
  height: 380rpx;
  bottom: 0;
  position: fixed;
}
.price{
  padding: 20rpx 20rpx;
  font-size: 28rpx;
}

.radio {
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  cursor: pointer;
}
radio{
  transform:scale(0.7);
}

.beis{
  color: #888;
  font-size: 23rpx;
}

.note2_item text{ display: block; font-size:26rpx; line-height: 40rpx; height: 40rpx; overflow: hidden; white-space: nowrap; text-overflow:ellipsis; }

.wx-switch-input{
width:102rpx !important;
height:50rpx !important;
margin:0 !important;
padding: 0 !important;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
width:100rpx !important;
height:46rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
width:58rpx !important;
height:46rpx !important;
}
