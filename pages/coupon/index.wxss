/* pages/coupon/index.wxss */
.searchbar-result{
  margin-top: 0px;
}
.scroll-list {
    overflow: hidden;
}

.weui-icon-search, 
.weui-search-bar__text {
    vertical-align: inherit;
}
.weui-search-bar {
  position: relative;
  padding: 5px 5px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #EFEFF4;
  border-top: 1rpx solid #D7D6DC;
  border-bottom: 1rpx solid #D7D6DC;
}
.weui-icon-search {
  margin-right: 8px;
}
.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
  height: 40rpx;
}
.weui-search-bar__text {
  display: inline-block;
  font-size: 14px;
  vertical-align: middle;
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  border-radius: 5px;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
  width: 80%;
  height: 60rpx;
}
.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  height: 60rpx;
  line-height: 60rpx;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.weui-search-bar__input {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 14px;
}

.weui-icon-clear {
  position: absolute;
  top: 15rpx;
  right: 10rpx;
  font-size: 0;
  height: 40rpx;
}
.weui-icon-clear icon{
  height: 40rpx;
}
.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9B9B9B;
  background: #FFFFFF;
  line-height: 60rpx;
}
.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #09BB07;
  white-space: nowrap;
}

.weui-icon-search {
  background: #479de6;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 5px;
  color: #fff;
  margin-left: 10rpx;
  font-size: 26rpx;
  margin-right:0px;
  margin-top: 3rpx;
}
button::after{
border:none;
} 